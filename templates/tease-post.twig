{% extends "tease.twig" %}

{% block content %}
  <div class="row m-b-md p-b-md border-bottom">
    <div class="col-md-4">
      {% if post.thumbnail.src %}
      <img src="{{post.thumbnail.src}}" />
      {% endif %}
    </div>

    <div class="col-md-8">
      <h3><a href="{{post.link}}">{{post.title}}</a></h3>
      <p>{{post.get_preview(30, true, false)}}</p>
      <a href="{{ post.link }}" class="btn btn-primary">Read More</a>
    </div>
  </div>
{% endblock %}
