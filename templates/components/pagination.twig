<nav>
  <ul class="pagination">
    {% if pagination.prev %}
    <li><a href="{{ pagination.prev.link }}">Prev</a></li>
    {% endif %}

    {% for page in pagination.pages %}
    <li {% if page.current %}class="active"{% endif %}>
      <a href="{{ page.link }}">{{ page.title }}</a>
    </li>
    {% endfor %}

    {% if pagination.next %}
    <li><a href="{{ pagination.next.link }}">Next</a></li>
    {% endif %}
  </ul>
</nav>
