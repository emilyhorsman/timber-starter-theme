<nav class="navbar navbar-light">
  <button class="navbar-toggler hidden-md-up" type="button" data-toggle="collapse" data-target="#js-main-nav-bar">
    &#9776;
  </button>

  <div class="collapse navbar-toggleable-sm" id="js-main-nav-bar">
    <a class="navbar-brand" href="{{ site.link }}">{{ site.title }}</a>
    <ul class="nav navbar-nav nav-pills">
      {% for item in nav_bar.get_items %}
      <li class="nav-item {% if item.current %}active{% endif %}">
        <a class="nav-link" href="{{ item.link }}">{{ item.title }}{% if item.current %}<span class="sr-only">(current)</span>{% endif %}</a>
      </li>
      {% endfor %}
    </ul>

    {% if nav_widgets %}
    {{ nav_widgets }}
    {% endif %}
  </div>
</nav>
